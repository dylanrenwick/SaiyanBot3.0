{
    "env": {
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
		"ecmaFeatures": {
			"experimentalObjectRestSpread": true
		}
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"no-unused-vars": [
			"error",
			{ "args": "none" }
		],
		"curly": [
			"error",
			"multi-line"
		],
		"max-len": [
			"error",
			{
				"code": 160,
				"tabWidth": 4
			}
		]
    }
}
